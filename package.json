{
  "name": "@beeeku/cookieplus",
  "version": "0.0.4",
  "description": "",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "author": "Bikash Dash <beeeku@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/beeeku/cookieplus"
  },
  "scripts": {
    "build-fast": "tsup --format cjs,esm",
    "build": "yarn run build-fast  --dts-resolve",
    "prepublishOnly": "yarn run build",
    "release": "yarn run format && yarn run build  && git commit -am \"$npm_package_version\" && git tag $npm_package_version && git push && git push --tags && yarn publish",
    "format": "prettier --write './**/*.{js,json,yml,md,ts}'",
    "format:check": "prettier --check './**/*.{js,json,yml,md,ts}'"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": true,
    "sourcemap": true,
    "clean": true,
    "minify": true
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "2.7.1",
    "tsup": "6.1.2",
    "typescript": "4.7.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2022
    },
    "env": {
      "es6": true
    },
    "extends": [
      "prettier"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "none",
    "singleQuote": true,
    "endOfLine": "lf",
    "useTabs": true,
    "printWidth": 120,
    "overrides": [
      {
        "files": "**/*.json",
        "options": {
          "parser": "json-stringify",
          "useTabs": false,
          "tabWidth": 2
        }
      }
    ]
  }
}
